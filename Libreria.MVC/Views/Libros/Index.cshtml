                @Html.DisplayFor(modelItem => item.PaisCodigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutorCodigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditorialCodigo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Codigo }) |
                @Html.ActionLink("Details", "Details", new { id = item.Codigo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Codigo })
            </td>
        </tr>
}
    </tbody>
</table>
