                @Html.DisplayNameFor(model => model.CantidadEjemplares)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaisCodigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorCodigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditorialCodigo)
            </th>
            <th></th>
        </tr>
